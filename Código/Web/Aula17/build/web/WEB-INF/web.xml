<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app 
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
  "http://java.sun.com/dtd/web-app_2_3.dtd"> 

<web-app> 
    <filter> 
        <filter-name> 
            UpperCase Filter 
        </filter-name> 
        <filter-class> 
            UpperCaseFilter 
        </filter-class> 
    </filter> 
    <filter-mapping> 
        <filter-name> 
            UpperCase Filter 
        </filter-name> 
        <servlet-name> 
            WelcomeServlet 
        </servlet-name> 
    </filter-mapping> 
    <servlet> 
        <servlet-name> 
            WelcomeServlet
        </servlet-name> 
        <servlet-class> 
            WelcomeServlet
        </servlet-class> 
    </servlet>    
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/appl</url-pattern>
    </servlet-mapping>    
</web-app>
